<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    style="@style/Widget.Material3.BottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/bottom_sheet_header"
        style="@style/Widget.Material3.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!--       TODO: circle <de.hdodenhof.circleimageview.CircleImageView-->
        <ImageView
            android:id="@+id/imvTransport"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="До прибытия на объект" />

            <TextView
                android:id="@+id/ivTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00:00" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Точка А" />

        <TextView
            android:id="@+id/tvPointA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Набережная, 6, Казань" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Точка Б" />

        <TextView
            android:id="@+id/tvPointB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Абдрахманова, 15, Казань" />

        <LinearLayout
            android:id="@+id/llTypeOfWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCB08"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вид работ" />

            <TextView
                android:id="@+id/tvTypeOfWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Загрузка щебня, полевые" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRoadActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llCallToDispatcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    style="@style/StyleInRoadButtons"
                    android:src="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/tvCallToDispatcher"
                    style="@style/StyleInRoadTextView"
                    android:text="Звонок диспетчеру" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRoadProblem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    style="@style/StyleInRoadButtons"
                    android:src="@drawable/ic_stop" />

                <TextView
                    android:id="@+id/tvRoadProblem"
                    style="@style/StyleInRoadTextView"
                    android:text="Проблема в пути" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llIncorrectRoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    style="@style/StyleInRoadButtons"
                    android:src="@drawable/ic_globe" />

                <TextView
                    android:id="@+id/tvIncorrectRoad"
                    style="@style/StyleInRoadTextView"
                    android:text="Некорректный маршрут" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnLetsGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFCB08"
            android:text="@string/btn_login"
            android:textColor="#2B2E2D"
            app:icon="@drawable/ic_arrow_black"
            app:iconGravity="textEnd" />
    </LinearLayout>
</LinearLayout>