<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleRootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#F5F5F5</item>
    </style>

    <style name="StyleMainLogo">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="StyleTitleLogging">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">#2B2E2D</item>
        <item name="android:textSize">24sp</item>
        <item name="android:viewportWidth">200</item>
    </style>

    <style name="StyleEditTextLogging">
        <item name="android:layout_width">@dimen/commonInputWidth</item>
        <item name="android:layout_height">@dimen/commonInputHeight</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="StyleButtonLogging">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:backgroundTint">#1C1D1B</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleTextViewLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StyleInRoadButtons">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="StyleInRoadTextView">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>